            <field name="name">l10n_cl_hr.payslip.input.type.tree</field>
            <field name="model">l10n_cl_hr.payslip.input.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="show_input"/>
                </tree>
            </field>
        </record>

        <!-- Acción -->
        <record id="action_l10n_cl_hr_payslip_input_type" model="ir.actions.act_window">
            <field name="name">Tipos de Input CL</field>
            <field name="res_model">l10n_cl_hr.payslip.input.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú raíz -->
        <menuitem id="menu_l10n_cl_hr_payslip_input_type_root"
                  name="Nómina CL"
                  sequence="10"/>

        <!-- Submenú -->
        <menuitem id="menu_l10n_cl_hr_payslip_input_type"
                  name="Tipos de Input"
                  parent="menu_l10n_cl_hr_payslip_input_type_root"
                  action="action_l10n_cl_hr_payslip_input_type"
                  sequence="20"/>

    </data>
</odoo>